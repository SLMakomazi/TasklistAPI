  },
  "item": [
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"description\": \"Complete API documentation\",\n    \"dueDate\": \"2025-10-20T14:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/tasks",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks"]
        }
      }
    },
    {
      "name": "List All Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks"]
        }
      }
    },
    {
      "name": "List Completed Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks?completed=true",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks"],
          "query": [
            {
              "key": "completed",
              "value": "true"
            }
          ]
        }
      }
    },
    {
      "name": "Mark Task as Complete",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/tasks/1/complete",
          "host": ["{{base_url}}"],
          "path": ["api", "tasks", "1", "complete"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    }
  ]
}
